<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <id.co.viva.news.app.component.RobotoBoldTextView
        android:id="@+id/text_label_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/label_favorites"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <com.nhaarman.listviewanimations.itemmanipulation.DynamicListView
        android:id="@+id/list_favorites"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/text_label_favorite"
        android:choiceMode="singleChoice"
        android:clipToPadding="false"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:padding="2dp" />

    <id.co.viva.news.app.component.RobotoTextView
        android:id="@+id/text_no_result_detail_content_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/label_no_results_favorite"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold" />
</RelativeLayout>