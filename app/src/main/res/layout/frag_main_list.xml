<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout xmlns:fab="http://schemas.android.com/apk/res-auto"
        xmlns:ripple="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:id="@+id/header_main_list_and_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp">

            <id.co.viva.news.app.component.RobotoBoldTextView
                android:id="@+id/text_main_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <id.co.viva.news.app.component.RobotoBoldTextView
                android:id="@+id/date_main_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <!-- Big Card -->
        <id.co.viva.news.app.component.LoadMoreListView xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/list_main_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/header_main_list_and_date"
            android:clipToPadding="false"
            android:divider="@null"
            android:fadingEdge="none"
            android:fitsSystemWindows="true"
            android:padding="2dp"
            android:scrollbarStyle="outsideOverlay"
            tools:ignore="overdraw" />
        <!-- Small Card -->
        <id.co.viva.news.app.component.LoadMoreListView
            android:id="@+id/list_main_list_small_card"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/header_main_list_and_date"
            android:choiceMode="singleChoice"
            android:clipToPadding="false"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:padding="2dp" />

        <ProgressBar
            android:id="@+id/loading_progress_layout_headline_terbaru"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true" />

        <id.co.viva.news.app.component.RobotoTextView
            android:id="@+id/text_loading_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loading_progress_layout_headline_terbaru"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="@string/label_loading_data"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <com.andexert.library.RippleView
            android:id="@+id/layout_ripple_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            ripple:rv_centered="true"
            ripple:rv_color="@color/transparent">

            <Button
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="@drawable/shadow_button"
                android:text="Retry"
                android:textColor="@color/white" />
        </com.andexert.library.RippleView>

        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="16dp"
            android:src="@drawable/cm_arrow_up"
            fab:fab_colorNormal="@color/news_base_color"
            fab:fab_colorPressed="@color/grey" />
    </RelativeLayout>
</LinearLayout>